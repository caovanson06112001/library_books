default: &default
  adapter: mysql2
  encoding: utf8mb4
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username:
  password:
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: library_books_development

test:
  <<: *default
  database: library_books_test

production:
  <<: *default
  database: library_books_production
  username: library_books
  password: <%= ENV['LIBRARY_BOOKS_DATABASE_PASSWORD'] %>
